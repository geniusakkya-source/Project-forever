    <script>
        function showPage(pageId, element) {
            // Update Pages
            const pages = document.querySelectorAll('.page');
            pages.forEach(p => p.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');

            // Update Nav
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(n => n.classList.remove('active'));
            element.classList.add('active');
        }

        function approve() {
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#fbbf24', '#ffffff', '#0f172a']
            });
            setTimeout(() => {
                alert("Authorization Granted. The partnership is officially active. Can't wait to see you, Darshani!");
            }, 500);
        }

        function pending() {
            alert("The file remains open. My hope remains 100%. I will wait for you.");
        }
    </script>
